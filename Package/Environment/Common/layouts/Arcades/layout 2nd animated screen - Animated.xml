<layout width="1920" height="1080" font="Roboto-Bold.ttf" loadFontSize="32" fontColor="EEEEEEE">

<!-----------------2nd Screen Marquee----------------->

<menu menuIndex="0" mode="system" type="custom" monitor="1" videoType="marquee" imageType="marquee" volume="0" height="1080" width="1920" layer="6" scrollTime=".24" scrollAcceleration=".025" minScrollTime=".06">
		<itemDefaults spacing="2" fontSize="35" width="1920" height="1080" x="center" y="center" xOrigin="center" yOrigin="center" alpha="1" monitor="1" layer="1"/>
	<item monitor="1" alpha="0" xOffset="-145" layer="1">
	</item>
	<item selected="true" monitor="1" alpha="1" layer="1">
<onPlaylistEnter><set duration="0.01"><animate type="width" to ="2016"/><animate type="height" to ="1134"/></set></onPlaylistEnter>
<onPlaylistExit><set duration="0.01"></set></onPlaylistExit>
<onMenuJumpEnter><set duration="0.01"><animate type="width" to ="2016"/><animate type="height" to ="1134"/></set></onMenuJumpEnter>
<onMenuJumpExit><set duration="0.01"></set></onMenuJumpExit>
<onMenuScroll><set duration="0.2"></set></onMenuJumpScroll>
<onMenuIdle><set duration="0.3"><animate type="width" to ="1920"/><animate type="height" to ="1080"/></set></onMenuIdle >
	</item>
	<item monitor="1" xOffset="145" alpha="0" layer="1">
	</item>
	</menu>

 <image src="images/hide.png" monitor="1" alpha="1" y="center" x="center" yOrigin="center" xOrigin="center" height="1080" width="1920" layer="19">
<onEnter>
<set duration="1.5">
                <animate type="yOrigin" to="center" algorithm="easeinquadratic"/>
</set>
<set duration="0.6">
                <animate type="alpha" to="0" algorithm="easeinquadratic"/>
</set>
</onEnter>
<onExit>
<set duration="1">
                <animate type="alpha" to="1" algorithm="easeinquadratic"/>
</set>
</onExit>
  </image>

</layout>


