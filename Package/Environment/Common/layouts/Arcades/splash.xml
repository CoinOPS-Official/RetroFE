<layout width="1920" height="1080" font="Roboto-Bold.ttf" loadFontSize="32" fontColor="dedede">
   

   <video src="video/Intro.mp4" height="1080" width="1920" alpha="1" volume="0">
  		<onIdle>
		<set duration="1">                
		<animate type="volume" to="1" algorithm="easeinquadratic"/>  
	    	</set>
		<set duration="7.5">                
		<animate type="alpha" to="1" algorithm="easeinquadratic"/>  
	    	</set>
		<set duration="0.5">                
		<animate type="volume" to="0" algorithm="easeinquadratic"/>  
	    	</set>
		<set duration="10">                
		<animate type="volume" to="0" algorithm="easeinquadratic"/>  
	    	</set>
  		</onIdle> 
  </reloadableVideo>  

 <image src="images/Splash.png" alpha="1" x="center" y="center" xOrigin="center" yOrigin="center" height="1080" width="1920" layer="18">
</image>

 <image src="images/Fire.png" alpha="1" x="1083" y="553" height="100" xOrigin="center" yOrigin="center"width="100" layer="19">
	<onIdle>
      <set duration="0.01">
        <animate type="height" to="100"/>
        <animate type="width" to="100"/>
        <animate type="alpha" to="0.6"/>
      </set>
      <set duration="1">
        <animate type="height" to="135"/>
        <animate type="width" to="135"/>
        <animate type="alpha" to="0"/>
      </set>
    </onIdle >
  </image>

 <image src="images/Fire.png" alpha="1" x="1083" y="553" height="100" xOrigin="center" yOrigin="center"width="100" layer="19">
	<onIdle>
      <set duration="0.01">
        <animate type="height" to="100"/>
        <animate type="width" to="100"/>
        <animate type="alpha" to="0.6"/>
      </set>
      <set duration="1">
        <animate type="height" to="170"/>
        <animate type="width" to="170"/>
        <animate type="alpha" to="0"/>
      </set>
    </onIdle >
  </image>


 <image src="images/hide.png" alpha="1" x="0" y="0" height="1080" width="1920" layer="19">
  		<onIdle>
		<set duration="0.5">                
		<animate type="alpha" to="0" algorithm="easeinquadratic"/>  
	    	</set>
		<set duration="8">                
		<animate type="alpha" to="0" algorithm="easeinquadratic"/>  
	    	</set>
		<set duration="0.5">                
		<animate type="alpha" to="1" algorithm="easeinquadratic"/>  
	    	</set>
		<set duration="10">                
		<animate type="alpha" to="1" algorithm="easeinquadratic"/>  
	    	</set>
  		</onIdle> 
  </image>

 <image src="images/hide.png" monitor="1" alpha="1" y="center" x="center" yOrigin="center" xOrigin="center" height="1080" width="1920" layer="19">
  </image>

 </layout>




